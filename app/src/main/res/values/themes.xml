<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Studyfy" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/Green</item>
        <item name="colorSecondary">@color/DarkBlue</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>


        <style name="SearchViewStyle">
            <!-- Arama ikonu rengini gri yapmak için -->
            <item name="android:searchIcon">@drawable/ic_search</item>

            <!-- Arama çubuğu metin rengi ve hint (yer tutucu) rengi -->
            <item name="android:textColor">@color/unselected_color</item> <!-- Metin rengi -->
            <item name="android:textColorHint">@android:color/darker_gray</item> <!-- Hint rengi -->

            <!-- Arama çubuğunun arka planı -->
            <item name="android:queryBackground">@android:color/white</item>

        </style>

    <style name="Theme.Studyfy" parent="Base.Theme.Studyfy" />
</resources>